{
  "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./lib",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
  },
  "include": ["*", "package.json"]
}